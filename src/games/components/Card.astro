---
const { card, onClick, isFlipped } = Astro.props;
---

<div
  class={`card ${isFlipped ? "flipped" : ""}`}
  onClick={onClick}
  data-id={card.id}
>
  <div class="inner">
    <div class="back">
      <div class="card-content">
        <img src={card.img} alt={`Carta de ${card.name}`} />
      </div>
      <img
        class="card-rear-front"
        src="/assets/games/back-front-card.png"
        alt="Parte de atrás de la carta"
      />
    </div>
    <div class="front">
      <div class="card-content">
        <img src="/assets/games/default.png" alt="Parte de atrás de la carta" />
      </div>
    </div>
  </div>

  <style>
    .card {
      perspective: 1000px;
      width: 200px;
      height: 250px;
      border-radius: 8px;
      overflow: hidden;
    }
    .card-rear-front {
      position: absolute;
    }
    .card .inner {
      width: 100%;
      height: 100%;
      transition: transform 0.6s;
      transform-style: preserve-3d;
      position: relative;
    }
    .card.flipped .inner {
      transform: rotateY(180deg);
    }
    .card .front,
    .card .back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      background: url("/assets/games/back-card.png") no-repeat center center;
      background-size: cover;
    }
    .card .front {
      transform: rotateY(0deg);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .card .back {
      transform: rotateY(180deg);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .card-content {
      height: 100%;
      object-fit: cover;
      border-radius: 48px;
      padding: 6px;
      overflow: hidden;
    }
    .card .front img,
    .card .back img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</div>
