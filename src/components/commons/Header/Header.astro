---
import './header.css'
---

<header class="main-header">
  <nav class="main-header__nav">
    <button
      class="hamburger-menu"
      id="hamburger-menu"
      aria-label="Menu Principal"
    >
      <div class="hamburger-icon">
        <div class="hamburger-icon-1"></div>
        <div class="hamburger-icon-2"></div>
        <div class="hamburger-icon-3"></div>
      </div>
    </button>
    <ul class="main-header__nav-list" id="nav-list">
      <li class="main-header__nav-item">
        <a href="/" class="main-header__nav-link" onclick="closeMenu()"
          >Inicio</a
        >
      </li>
      <li class="main-header__nav-item">
        <a href="/cuentos/" class="main-header__nav-link" onclick="closeMenu()"
          >Cuentos</a
        >
      </li>
      <li class="main-header__nav-item">
        <a href="/sagas/" class="main-header__nav-link" onclick="closeMenu()"
          >Sagas</a
        >
      </li>
      <li class="main-header__nav-item">
        <a
          href="/personalizado/cuento/"
          class="main-header__nav-link"
          onclick="closeMenu()">Cuento Personalizado</a
        >
      </li>
      <li class="main-header__nav-item">
        <a
          href="/newsletters/"
          class="main-header__nav-link"
          onclick="closeMenu()">NewsLetters</a
        >
      </li>
    </ul>
    <div class="backdrop" id="backdrop" onclick="closeMenu()"></div>
  </nav>
</header>

<script>
  let isMenuOpen = false

  document
    .getElementById('hamburger-menu')
    .addEventListener('click', toggleMenu)
  document
    .getElementById('nav-list')
    .classList.toggle('main-header__nav-list--open', isMenuOpen)

  function toggleMenu() {
    isMenuOpen = !isMenuOpen
    document
      .getElementById('nav-list')
      .classList.toggle('main-header__nav-list--open', isMenuOpen)
    document
      .getElementById('backdrop')
      .classList.toggle('backdrop--visible', isMenuOpen)
    document.body.classList.toggle('no-scroll', isMenuOpen)
  }

  function closeMenu() {
    isMenuOpen = false
    document
      .getElementById('nav-list')
      .classList.remove('main-header__nav-list--open')
    document.getElementById('backdrop').classList.remove('backdrop--visible')
    document.body.classList.remove('no-scroll')
  }
</script>
