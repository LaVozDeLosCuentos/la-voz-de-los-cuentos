---
import NavLayout from '../layouts/NavLayout.astro'
import SagasPage from '../components/Page/SagasPage.vue'
import SectionsDefault from '../components/Sections/Default.vue'
import Sagas from '../components/Sections/Sagas.vue'
import { toSagas } from '../router'
import t from '../translations'
---

<NavLayout
  title={t('page.sagas.h1')}
  description={t('page.sagas.description')}
  url={toSagas()}
>
  <SagasPage>
    <SectionsDefault>
      <Sagas amount="50" />
    </SectionsDefault>
  </SagasPage>
</NavLayout>
