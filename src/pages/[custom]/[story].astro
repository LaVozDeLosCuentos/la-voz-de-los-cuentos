---
import CustomPage from '../../components/Page/CustomPage.vue'
import NavLayout from '../../layouts/NavLayout.astro'
import { toCustomStory } from '../../router'
import t from '../../translations'
export async function getStaticPaths() {
  const paths = [
    {
      params: {
        custom:
          import.meta.env.PUBLIC_LANG === 'en' ? 'custom' : 'personalizado',
        story: import.meta.env.PUBLIC_LANG === 'en' ? 'story' : 'cuento'
      }
    }
  ]

  return paths
}
---

<NavLayout
  title={t('page.custom.h1')}
  description={t('page.custom.description')}
  url={toCustomStory()}
>
  <CustomPage client:load />
</NavLayout>
