---
import NavLayout from '../layouts/NavLayout.astro'
import StoriesPage from '../components/Page/StoriesPage.vue'
import SectionsDefault from '../components/Sections/Default.vue'
import FilteredStories from '../components/Sections/FilteredStories.vue'
import t from '../translations'
import { toStories } from '../router'
export async function getStaticPaths() {
  const paths = [
    {
      params: {
        stories: import.meta.env.PUBLIC_LANG === 'en' ? 'stories' : 'cuentos'
      }
    }
  ]

  return paths
}
---

<NavLayout
  title={t('page.stories.h1')}
  description={t('page.stories.description')}
  url={toStories()}
>
  <StoriesPage>
    <SectionsDefault>
      <FilteredStories client:load />
    </SectionsDefault>
  </StoriesPage>
</NavLayout>
